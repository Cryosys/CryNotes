<cry:CryWindowDesignable
    x:Class="CryNotes.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryNotes"
        xmlns:cry="clr-namespace:CryLib.WPF;assembly=CryLib.WPF"
        mc:Ignorable="d"
        Background="DimGray"
        HeaderColor="DimGray"
        MaximizeVisibility="Collapsed"
        MinimizeVisibility="Collapsed"
        Title="SettingsWindow" Height="150" Width="400">
    
    <Grid>
        <cry:SliderCheckBox Checkstate="{Binding ShowInAltTab}" InfoText="Show in Alt+Tab &#x0a;(will only apply after restarting the app)"/>
    </Grid>
</cry:CryWindowDesignable>
