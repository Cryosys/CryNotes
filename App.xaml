<Application x:Class="CryNotes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CryNotes"
             ShutdownMode="OnLastWindowClose"
             Startup="Application_Startup">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CryLib.WPF;component/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!--#region Auto Applied Styles-->
            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource CryComboBoxStyle}"/>

            <Style TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource CryComboBoxItemStyle}"/>

            <Style TargetType="{x:Type ScrollViewer}" BasedOn="{StaticResource CryScrollViewerControlStyle}"/>
            
            <Style TargetType="{x:Type ContextMenu}" BasedOn="{StaticResource CryContextMenuControlStyle}"/>
            <!--#endregion Auto Applied Styles-->
        </ResourceDictionary>

    </Application.Resources>
</Application>
